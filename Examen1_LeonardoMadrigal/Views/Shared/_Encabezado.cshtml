@{
	var nombreUsuario = Context.Session.GetString("nombre");
	var apellidoUsuario = Context.Session.GetString("apellido");
	var rolUsuario = Context.Session.GetString("Rol");
	    var cantidadNotificaciones = ViewBag.CantidadNotificaciones as int? ?? 0;


}



<div class="top-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-6">
				<div class="social-links">
					<ul>
						<li>
							<a href="#"><i class="icon icon-facebook"></i></a>
						</li>
						<li>
							<a href="#"><i class="icon icon-twitter"></i></a>
						</li>
						<li>
							<a href="#"><i class="icon icon-youtube-play"></i></a>
						</li>
						<li>
							<a href="#"><i class="icon icon-behance-square"></i></a>
						</li>
					</ul>
				</div><!--social-links-->
			</div>
			<div class="col-md-6">
				<div class="right-element">
					
					@if (!string.IsNullOrEmpty(nombreUsuario))
					{
						<p>Bienvenido, @nombreUsuario @apellidoUsuario </p>
					}
					else
					{
						<p>Bienvenido, invitado</p>
					}


					@if (string.IsNullOrEmpty(nombreUsuario))
					{
					<a asp-area="" asp-controller="Usuario" asp-action="Login" class="user-account for-buy">
						<i class="icon icon-user"></i>
						<span>Sing in</span>
					</a>
					}
					@if (!string.IsNullOrEmpty(nombreUsuario))
					{	

					<a asp-area="" asp-controller="Usuario" asp-action="Logout" class="user-account for-buy">
						<i class="bi bi-box-arrow-in-left"></i>

						<span>Logout</span>
					</a>
					}
					@if (ViewContext.RouteData.Values["action"].ToString() == "Index")
					{
						@if (!string.IsNullOrEmpty(rolUsuario) && rolUsuario == "Administrador")
						{
							<a href="/Notificacion" style="margin-right:20px;">
								<i class="bi bi-bell-fill" style="color:black;"></i>
								@if (cantidadNotificaciones > 0)
								{
									<span class="badge bg-danger" style="position:absolute;  border-radius:50%; padding:4px 7px; font-size:12px;">
										@cantidadNotificaciones
									</span>
								}
							</a>
						}
					}

					<div class="action-menu">

						<!-- Barra de búsqueda en el encabezado -->
						<div class="search-bar">
							<a href="#" class="search-button search-toggle" data-selector="#header-wrap">
								<i class="icon icon-search"></i>
							</a>
							<form role="search" method="get" action="/Libro/UsuarioIndex" class="search-box">
								<input class="search-field text search-input" placeholder="Buscar libros..." type="search" name="searchString">
							</form>
						</div>

					</div>

				</div><!--top-right-->
			</div>

		</div>
	</div>
</div><!--top-content-->
