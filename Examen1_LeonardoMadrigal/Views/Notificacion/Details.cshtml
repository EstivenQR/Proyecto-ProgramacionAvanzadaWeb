@model Examen1_LeonardoMadrigal.Models.Notificaciones

<!DOCTYPE html>
<html lang="es">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detalles de la Notificación</title>
</head>
<body>
    <h1>Detalles de la Notificación</h1>

    <div>
        <strong>Mensaje:</strong> @Model.Mensaje
    </div>
    <div>
        <strong>Fecha de Solicitud:</strong> @Model.FechaSolicitud.ToString("dd/MM/yyyy")
    </div>

    <div>
        <a href="@Url.Action("Edit", "Notificacion", new { id = Model.Id })">Editar</a> |
        <a href="@Url.Action("Delete", "Notificacion", new { id = Model.Id })">Eliminar</a> |
        <a href="@Url.Action("Index", "Notificacion")">Volver a la lista</a>
    </div>
</body>
</html>
