@model IEnumerable<Examen1_LeonardoMadrigal.Models.Libro>

<section id="all-books" class="bookshelf py-5 my-5">
    <div class="container">
        <div class="section-header align-center">
            <div class="title">
                <span>All Books</span>
            </div>
            <h2 class="section-title">Featured Books</h2>
        </div>

        <div class="row">
            @foreach (var libro in Model)
            {
                <div class="col-md-3">
                    <div class="product-item">
                        <figure class="product-style">
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(libro.ImagenPortada)" alt="Books" class="product-item">
                        </figure>
                        <figcaption>
                            <h3>@libro.Titulo</h3>
                            <span>@libro.Autor</span>
                            <div class="item-price">$ @libro.Precio</div>
                        </figcaption>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
